@model List<Comment>




<div class="customers">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="titlepage text_align_center">
                    <h2>Yorumlar</h2>
                </div>
            </div>
        </div>

        @foreach (var item in Model)
        {



            <div class="row">
                <div class="col-md-12">
                    <div id="myCarousel" class="carousel slide customers_banne" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="container-fluid">
                                    <div class="carousel-caption relative">
                                        <div class="test_box text_align_center border border-5">
                                            <h1>@item.CommentTitle</h1>
                                            <h3>@item.CommentContent </h3>
                                            <i><img src="@item.CommentImage" alt="#" /></i>
                                            <h4> @item.CommenUserName</h4>
                                            <span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
            <a class="read_more" href="/Comment/Index">Bütün Yorumları Gör</a>
            <br />
            <a class="read_more" href="/Comment/AddComment">Yorum Yap</a>

        }
    </div>
</div>


